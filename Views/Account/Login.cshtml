@model Student_housing.Models.LogInViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<div class="auth-page">
    <div class="auth-card">
        <h1 class="auth-title">Welcome back!</h1>
        <p class="auth-subtitle">Log in to continue</p>

        <form asp-action="Login" asp-controller="Account" method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-1"></div>

            <div class="auth-field">
                <label asp-for="Username" class="auth-label"></label>
                <input asp-for="Username" class="auth-input" autocomplete="username" placeholder="Enter username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="auth-field">
                <label asp-for="Password" class="auth-label"></label>
                <input asp-for="Password"
                       class="auth-input"
                       type="password"
                       autocomplete="current-password" 
                       placeholder="Enter password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="auth-btn">Log in</button>

            <p class="auth-switch">
                Don’t have an account?
                <a asp-action="Register" asp-controller="Account" class="auth-link">Register</a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
