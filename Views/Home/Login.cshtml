@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NexusThuis</title>
    <link rel="stylesheet" href="~/css/Login.css">
    <link href="~/images/favicon.ico" sizes="64x64" type="image/png" rel="icon" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Google+Sans:ital,opsz,wght@0,17..18,400..700;1,17..18,400..700&family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap" rel="stylesheet">
</head>
<body>
    <div id="login">
        <h1> Welcome Back!</h1>
        <form asp-controller="Home" asp-action="Login" method="POST">
            <input name="email" type="email" placeholder="Email">
            <input name="password" type="password" placeholder="Password">
            <button type="submit"> Log in </button>
            <a asp-controller="Home" asp-action="Signup"> Don't you have an account? </a>
        </form>
    </div>
    
</body>
</html>