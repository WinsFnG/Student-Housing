<script>
  // Sidebar toggle
  const sidebar = document.getElementById("sidebar");
  const menuToggle = document.getElementById("menuToggle");
  menuToggle.addEventListener("click", () => sidebar.classList.toggle("open"));

  
  const homeSection = document.getElementById("homeSection");
  const menuSection = document.getElementById("menuSection");
  const cleaningSection = document.getElementById("cleaningSection");
  const garbageSection = document.getElementById("garbageSection");
  const reportsSection = document.getElementById("reportsSection");
  const documentsSection = document.getElementById("documentsSection");
  const eventsSection = document.getElementById("eventsSection");

  
  const backButtons = document.querySelectorAll(".backToMenu");
  backButtons.forEach(btn => btn.addEventListener("click", () => {
    homeSection.style.display = "block";
    menuSection.style.display = "flex";
    cleaningSection.style.display = "none";
    garbageSection.style.display = "none";
    reportsSection.style.display = "none";
    documentsSection.style.display = "none";
    eventsSection.style.display = "none";
  }));

  
  document.getElementById("cleaningCard").addEventListener("click", () => {
    homeSection.style.display = "none"; menuSection.style.display = "none";
    cleaningSection.style.display = "block";
  });
  document.getElementById("garbageCard").addEventListener("click", () => {
    homeSection.style.display = "none"; menuSection.style.display = "none";
    garbageSection.style.display = "block";
  });
  document.getElementById("eventsCard").addEventListener("click", () => {
    homeSection.style.display = "none"; menuSection.style.display = "none";
    groceriesSection.style.display = "none";

    eventsSection.style.display = "block";
  });

  
  const sidebarItems = document.querySelectorAll(".sidebar-item");
  sidebarItems.forEach(item => {
    const section = item.dataset.section;
    item.addEventListener("click", () => {
    
      homeSection.style.display = "none";
      menuSection.style.display = "none";
      cleaningSection.style.display = "none";
      garbageSection.style.display = "none";
      reportsSection.style.display = "none";
      documentsSection.style.display = "none";
      eventsSection.style.display = "none";

      if (section === "home") {
        homeSection.style.display = "block";
        menuSection.style.display = "flex";
      } else if (section === "reports") {
        reportsSection.style.display = "block";
      } else if (section === "documents") {
        documentsSection.style.display = "block";
      } else if (section === "settings") {
        // later settings
      }

      
      sidebar.classList.remove("open");
    });
  });

  
  document.addEventListener("click", (e) => {
    if (!sidebar.contains(e.target) && !menuToggle.contains(e.target)) {
      sidebar.classList.remove("open");
    }
  });

  
  const eventForm = document.getElementById("eventForm");
  const eventsList = document.getElementById("eventsList");
  let events = [];

  function getEventStatus(dateStr) {
    const today = new Date(); today.setHours(0,0,0,0);
    const eventDate = new Date(dateStr + "T00:00");
    if (eventDate < today) return "past";
    return "upcoming";
  }

  function renderEvents() {
    eventsList.innerHTML = "";
    events.sort((a,b) => new Date(a.date) - new Date(b.date));
    events.forEach((ev, idx) => {
      const eventDiv = document.createElement("div");
      const statusClass = ev.completed ? "completed" : getEventStatus(ev.date);
      eventDiv.className = `event-item ${statusClass}`;
      eventDiv.innerHTML = `<strong>${ev.name}</strong> <em>(${ev.date})</em><p>${ev.description}</p><button>${ev.completed ? "Completed" : "Mark as Completed"}</button>`;
      const btn = eventDiv.querySelector("button");
      if(ev.completed) btn.disabled = true;
      btn.addEventListener("click", () => {
        events[idx].completed = true;
        renderEvents();
      });
      eventsList.appendChild(eventDiv);
    });
  }

  eventForm.addEventListener("submit", (e) => {
    e.preventDefault();
    const name = document.getElementById("eventName").value;
    const date = document.getElementById("eventDate").value;
    const description = document.getElementById("eventDescription").value;
    events.push({name, date, description, completed:false});
    eventForm.reset();
    renderEvents();
  });

  const groceriesSection = document.getElementById("groceriesSection");

document.getElementById("groceriesCard").addEventListener("click", () => {
  homeSection.style.display = "none";
  menuSection.style.display = "none";
  cleaningSection.style.display = "none";
  garbageSection.style.display = "none";
  reportsSection.style.display = "none";
  documentsSection.style.display = "none";
  eventsSection.style.display = "none";

  groceriesSection.style.display = "block";
});


const groceriesForm = document.getElementById("groceriesForm");
const productsContainer = document.getElementById("productsContainer");
const groceriesProposals = document.getElementById("groceriesProposals");
const addProductBtn = document.getElementById("addProductBtn");

addProductBtn.addEventListener("click", () => {
  const row = document.createElement("div");
  row.className = "product-row";
  row.innerHTML = `
    <input type="text" placeholder="Product name">
    <input type="text" placeholder="Reason">
  `;
  productsContainer.appendChild(row);
});

groceriesForm.addEventListener("submit", (e) => {
  e.preventDefault();

  const rows = productsContainer.querySelectorAll(".product-row");
  let itemsHTML = "";

  rows.forEach(row => {
    const inputs = row.querySelectorAll("input");
    itemsHTML += `
      <div class="proposal-item">
        <strong>${inputs[0].value}</strong>
        <em>${inputs[1].value}</em>

        <div class="proposal-actions">
          <button class="approve">Approve</button>
          <button class="reject">Reject</button>
        </div>

        <div class="bought-row">
          <label><input type="checkbox"> Bought</label>
          <input type="number" placeholder="‚Ç¨">
        </div>
      </div>
    `;
  });

  const proposal = document.createElement("div");
  proposal.className = "proposal-card";
  proposal.innerHTML = `<h4>Grocery Proposal</h4>${itemsHTML}`;

  groceriesProposals.prepend(proposal);

  groceriesForm.reset();
  productsContainer.innerHTML = `
    <div class="product-row">
      <input type="text" placeholder="Product name">
      <input type="text" placeholder="Reason">
    </div>
  `;
});


  
</script>



